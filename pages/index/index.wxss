/**index.wxss**/

.cardList{
  width: 750rpx;
  display: flex;
}

.cardItem{
  width: 250rpx;
  height: 400rpx;
  text-align: center;
}

.cardItem-image{
  width: 200rpx;
  height: 320rpx;
}

.cardItem-title{
  font-size: 28rpx;
}

.todos {
  padding: 10px;
}

.todo-item.completed {
  color: #999;
}

.add-todo {
  margin-top: 100px;
}

.filters {
  display: flex;
} 

.filters text {
  margin: 0 10px;
  padding: 10px;
  font-size: 14px;
  border: 1px solid #999;
  border-radius: 4px;
  text-align: center;
  flex: 1
}

.filters text.active {
  border-color: #09bb07;
  background-color: #09bb07;
  color: #ffffff;
}